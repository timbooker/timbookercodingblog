    script(type='text/javascript' src='/plugins/revolution_slider/rs-plugin/js/jquery.themepunch.plugins.min.js')
    script(type='text/javascript' src='/plugins/revolution_slider/rs-plugin/js/jquery.themepunch.revolution.min.js')
    script(type='text/javascript' src='/plugins/bxslider/jquery.bxslider.min.js')
    script(type='text/javascript' src='/plugins/fancybox/source/jquery.fancybox.pack.js')
