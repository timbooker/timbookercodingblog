doctype html
html
  head
    title= 'Tim Booker\'s Coding Blog'
    meta(charset='utf-8')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/metronic/style.css')
    link(rel='stylesheet', href='/stylesheets/metronic/style-metronic.css')
    link(rel='stylesheet', href='/stylesheets/metronic/style-responsive.css')
    link(rel='stylesheet', href='/stylesheets/metronic/themes/blue.css')
    link(rel='stylesheet', href='/stylesheets/metronic/custom.css')
    link(rel='stylesheet', href='/plugins/fancybox/source/jquery.fancybox.css')
    link(rel='stylesheet', href='/plugins/font-awesome/css/font-awesome.min.css')
  body
    header
      .header.navbar.navbar-default.navbar-static-top
        .container
          .navbar-header
                <button class="navbar-toggle btn navbar-btn" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand logo-v1" href="/">TIM BOOKER CODING BLOG</a>
          .navbar-collapse.collapse.
              <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li class="dropdown active">
                        <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false" href="#">
                            Blog
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="active"><a href="blog.html">Blog Page</a></li>
                            <li><a href="blog_item.html">Blog Item</a></li>
                        </ul>
                    </li>
              </ul>                
    .wrap
      .container
        .row
          .col-md-9.col-xs-12
            block content
          .col-md-3.col-xs-12
            .well.sidebar-nav
              ul.nav.nav-list
                li.nav-header categories
                - each cat in getCategories()
                  li
                    a(href=categoryURL(cat)) #{cat}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}


    footer.footer
      .container
        .well.well-sm
          small
            p
              | All content &copy; 2014 ...
            p
              | This blog runs on
              = ' '
              a(href="http://nodejs.org/") Node.js
              = ' '
              | in
              = ' '
              a(href="http://www.windowsazure.com/en-us/services/web-sites/") Windows Azure Web Sites
              = ' '
              | using the
              = ' '
              a(href="http://jsantell.github.io/poet/") Poet
              = ' '
              | blog engine.

    script(type='text/javascript' src='/plugins/jquery-1.10.2.min.js')
    script(type='text/javascript' src='/plugins/jquery-migrate-1.2.1.min.js')
    script(type='text/javascript' src='/plugins/bootstrap/js/bootstrap.min.js')
    script(type='text/javascript' src='/plugins/back-to-top.js')

